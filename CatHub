local player = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui")
gui.Name = "DeactivateGui"
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

local main = Instance.new("Frame")
main.Size = UDim2.fromScale(0.6,0.5)
main.Position = UDim2.fromScale(0.2,0.25)
main.BackgroundColor3 = Color3.fromRGB(20,20,20)
main.BackgroundTransparency = 0.1
main.Parent = gui
Instance.new("UICorner", main).CornerRadius = UDim.new(0,20)

local close = Instance.new("TextButton")
close.Size = UDim2.fromOffset(40,40)
close.Position = UDim2.new(1,-50,0,10)
close.Text = "X"
close.TextScaled = true
close.BackgroundColor3 = Color3.fromRGB(0,0,0)
close.TextColor3 = Color3.fromRGB(255,255,255)
close.Parent = main
Instance.new("UICorner", close).CornerRadius = UDim.new(1,0)

local title1 = Instance.new("TextLabel")
title1.Size = UDim2.fromScale(0.9,0.25)
title1.Position = UDim2.fromScale(0.05,0.15)
title1.BackgroundTransparency = 1
title1.TextScaled = true
title1.TextWrapped = true
title1.Font = Enum.Font.GothamBold
title1.TextColor3 = Color3.fromRGB(255,255,255)
title1.Text = 'Script deactivated, get the new one on our Discord server, click on "get link"'
title1.Parent = main

local title2 = Instance.new("TextLabel")
title2.Size = UDim2.fromScale(0.9,0.2)
title2.Position = UDim2.fromScale(0.05,0.4)
title2.BackgroundTransparency = 1
title2.TextScaled = true
title2.TextWrapped = true
title2.Font = Enum.Font.Gotham
title2.TextColor3 = Color3.fromRGB(255,255,255)
title2.Text = 'Script desativado, pegue o novo em nosso discord clique em "get link"'
title2.Parent = main

local button = Instance.new("TextButton")
button.Size = UDim2.fromScale(0.4,0.18)
button.Position = UDim2.fromScale(0.3,0.7)
button.BackgroundColor3 = Color3.fromRGB(255,204,0)
button.TextColor3 = Color3.fromRGB(0,0,0)
button.TextScaled = true
button.Font = Enum.Font.GothamBold
button.Text = "get link"
button.Parent = main
Instance.new("UICorner", button).CornerRadius = UDim.new(0,16)

local tweenService = game:GetService("TweenService")
local info = TweenInfo.new(0.12, Enum.EasingStyle.Quad, Enum.EasingDirection.Out, 0, true)

button.MouseButton1Click:Connect(function()
    local tween = tweenService:Create(button, info, {Size = UDim2.fromScale(0.45,0.2)})
    tween:Play()
    pcall(function()
        setclipboard("https://discord.gg/73RKUmbuRS")
    end)
end)

close.MouseButton1Click:Connect(function()
    gui:Destroy()
end)
